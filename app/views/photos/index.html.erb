<style>
  .tag{
    float: left;
    width: 15%;
    background-color: #5182BB;
    min-height: 400px;
    border-radius: 25px;
    border-style:solid;
    border-width:2px;
    border-color:#3A5E88;
    margin-left: 5%;
  }
  .label{
    margin-top: 30px;
    margin-left: 15%;
    font-size: 20px;
  }
  .tag_title{
    font-size: 18px;
    margin-left: 15%;
    margin-top: 20px;
  }
  a:hover {color: #FCE9DA}
  .tag_title_a {
    color: #BACDE4;
  }
  .tag_title_span{
    color: #BACDE4;
  }
  .upload{
    width: 50%;
    height: 50px;
    margin-top: 50px;
    margin-left: 15%;
    color: white;
    border-radius: 5px;
    border-style:solid;
    border-width:2px;
    border-color:#3A5E88;
    text-align:center;
    font-size: 25px;
  }
  .photo{
    float: left;
    width: 70%;
    background-color: white;
    min-height: 800px;
    border-radius: 55px;
    border-style:solid;
    border-width:2px;
    border-color:#4671A2;
    margin-left: 3%;
  }
  .photo_div{
    margin-left: 16px;
    margin-top: 15px;
    font-size: 20px;
  }
  .show_photo_all{
    margin-top: 10px;
  }
  .show_photo{
    float: left;
    margin-left: 5%;
    margin-top: 5px;
    width: 25%;
    background-color: #FDEADB;
    min-height: 200px;
  }
  .pic{
    margin-left: 5px;
    margin-right: 5px;
    margin-top: 5px;
    background-color: #FFFDFA;
    height: 100px;
    border-style:solid;
    border-width:2px;
    border-color:#8066A0;
  }
  .img{
    width: 100%;
    height: 100%;
  }
  .title{
    margin-left: 3px;
    margin-right: 3px;
    margin-top: 5px;
    background-color: #FFFDFA;
    height: 83px;
    border-color:white;
    /*text-align:center;*/
  }
  .r_title{
    height: 27px;
    margin-left: 15px;
    display: -webkit-flex;
    display:         flex;
    -webkit-align-items: center;
  }
  .release_fenye{
    height: 50px;
    width: 100%;
    margin-left: 155px;
    display: -webkit-flex;
    display:         flex;
    -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center;
  }

</style>
<div style="width: 100%;">
  <div class="tag">
    <div class="label">
      <label >Tags</label>
    </div>
    <% @tags.each do |tag| %>
      <div class="tag_title">
        <span class="tag_title_span">>&nbsp;</span>
        <a href="javascript:void()" class="tag_title_a" id="<%= tag.id %>" onclick="set_and_find(this)"><%= tag.title %></a>
        <input type="hidden" id="choos_tag" value="">
      </div>
    <% end %>
    <div class="upload">

      <%= form_tag(uploadpicture_photos_path,method: :post,enctype: "multipart/form-data",target: 'frameFile') do %>
        <input type="file" name="fileUp" accept="image/png,image/gif,image/jpeg" value="" alt="" onchange="upload(this)" style = "display:none" id = "fileUp" />
        <input type="text" name="fileName" style = "display:none" value="" id = "fileName" />
        <div onclick="setpic(this)">upload photo </div>
        <%= button_tag "提交", id:"picbutt",style:"display:none" %>
      <% end %>
      <iframe id='frameFile' name='frameFile' style='display: none;'></iframe>
    </div>
  </div>
  <div class="photo">

  </div>
</div>
<script>
  $(function () {
    $("#choos_tag").val('');
    page_photo(1);
  })
  function set_and_find(obj) {
     $("#choos_tag").val(obj.id);
     page_photo(1);
  }
  function page_photo(page){
    $.get('<%= page_photos_path %>',
        {
          tag_id:$("#choos_tag").val(),
          page:page
        },
        function (data, status) {
          if (status == 'success') {
            //alert("success");
            $(".photo").html(data);
          } else {
            ;
          }
        });
  }
  function upload(obj) {
    var file = obj.files[0];

    var filename =file.name.split(".")[0];
    if (file) {
      var url = null ;
      if (window.createObjectURL!=undefined) { // basic
        url = window.createObjectURL(file) ;
      } else if (window.URL!=undefined) { // mozilla(firefox)
        url = window.URL.createObjectURL(file) ;
      } else if (window.webkitURL!=undefined) { // webkit or chrome
        url = window.webkitURL.createObjectURL(file) ;
      }
      $("#fileName").val(filename);
      $("#picbutt").click();
      return url ;
    }
  }
  function setpic(obj){
    $("#fileUp").click();
  }
</script>


